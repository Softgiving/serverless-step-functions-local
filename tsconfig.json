{
  "compilerOptions": {
    "baseUrl": "/",
    "outDir": "build",
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "sourceMap": true,

    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,

    // Strict
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,

    // No unused/implicit
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "build"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
